            <div class="grid md:grid-cols-2 gap-6 mb-16">
                <div class="bg-gray-800/50 backdrop-blur-sm p-8 rounded-2xl border border-gray-700/50 hover:border-purple-500/50 transition-all duration-300">
                    <h2 class="text-2xl font-bold mb-4 bg-gradient-to-r from-blue-500 to-purple-500 text-transparent bg-clip-text">Quick Setup</h2>
                    <div class="space-y-4">
                        <div class="bg-gray-900/50 rounded-xl p-4 font-mono text-sm">
                            <div class="flex items-center gap-2 mb-2">
                                <div class="w-3 h-3 rounded-full bg-red-500"></div>
                                <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                                <div class="w-3 h-3 rounded-full bg-green-500"></div>
                            </div>
                            <code class="text-purple-400">npm install</code>
                            <code class="block text-blue-400 mt-2">npm run dev</code>
                            <code class="block text-green-400 mt-2">node index.js</code>
                        </div>
                    </div>
                </div>

                <div class="bg-gray-800/50 backdrop-blur-sm p-8 rounded-2xl border border-gray-700/50 hover:border-blue-500/50 transition-all duration-300">
                    <h2 class="text-2xl font-bold mb-4 bg-gradient-to-r from-purple-500 to-pink-500 text-transparent bg-clip-text">TailwindCSS Ready</h2>
                    <div class="space-y-4">
                        <div class="bg-gray-900/50 rounded-xl p-4 font-mono text-sm">
                            <p class="text-gray-400 mb-2">// tailwind.config.js</p>
                            <code class="text-blue-400">module.exports = {</code>
                            <code class="block text-purple-400 ml-4">content: ["./src/views/**/*.ejs"],</code>
                            <code class="block text-green-400 ml-4">darkMode: 'class',</code>
                            <code class="text-blue-400">}</code>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-gray-800/50 backdrop-blur-sm p-8 rounded-2xl border border-gray-700/50 mb-16">
                <h2 class="text-2xl font-bold mb-6 bg-gradient-to-r from-blue-500 to-pink-500 text-transparent bg-clip-text">Development Guide</h2>
                <div class="space-y-8">
                    <div>
                        <h3 class="text-xl font-semibold mb-4 text-gray-200">Project Structure</h3>
                        <div class="bg-gray-900/50 rounded-xl p-4 font-mono text-sm">
                            <pre class="text-gray-400">
├── src/
│   ├── views/
│   ├── assets/
│   │   └── css/
│   └── index.js
├── package.json
└── tailwind.config.js</pre>
                        </div>
                    </div>

                    <div>
                        <h3 class="text-xl font-semibold mb-4 text-gray-200">Custom Styles</h3>
                        <div class="bg-gray-900/50 rounded-xl p-4 font-mono text-sm">
                            <p class="text-gray-400 mb-2">// src/assets/css/tailwinds/style.css</p>
                            <code class="text-purple-400">@tailwind base;</code>
                            <code class="block text-purple-400">@tailwind components;</code>
                            <code class="block text-purple-400">@tailwind utilities;</code>
                        </div>
                    </div>
                </div>
            </div>
        </div>
